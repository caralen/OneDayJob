<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.fer.opp.onedayjob"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="25.3.1" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.VerificationActivity"
            android:label="@string/title_activity_verification" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.FilterActivity"
            android:label="@string/title_activity_filter" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.ChatActivity"
            android:label="@string/title_activity_chat" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.MailboxActivity"
            android:label="@string/title_activity_mailbox" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.GpsActivity"
            android:label="@string/title_activity_gps" />
        <activity
            android:name="hr.fer.opp.onedayjob.Activities.JobManagementActivity"
            android:label="@string/title_activity_job_management" />
    </application>

</manifest>