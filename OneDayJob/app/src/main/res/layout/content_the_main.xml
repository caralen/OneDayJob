<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hr.fer.opp.onedayjob.Activities.TheMainActivity"
    tools:showIn="@layout/app_bar_the_main">



    <!-- <include layout="@layout/activity_navigation" /> -->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- OVO JE LAYOUT ZA FEED -->
            <RelativeLayout
                android:id="@+id/navigation_feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">


                <ListView
                    android:id="@+id/list_jobs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <!-- OVO JE LAYOUT ZA GPS -->
            <RelativeLayout
                android:id="@+id/navigation_gps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <include layout="@layout/activity_maps"/>

                <Button
                    android:id="@+id/navigation_gps_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="50dp"
                    android:text="  GPS  "
                    android:textSize="50dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <!-- OVO JE LAYOUT ZA CHAT -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/navigation_mail"
                android:visibility="gone">

                <include layout="@layout/activity_mailbox"/>

                <Button
                    android:id="@+id/navigation_mail_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="50dp"
                    android:visibility="gone"
                    android:text=" MAILBOX " />

            </RelativeLayout>

        </FrameLayout>


        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/navigation" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
